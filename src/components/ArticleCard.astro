---
interface Props {
  title: string;
  description: string;
  imageUrl: string;
  benefits: string[];
}

const { title, description, imageUrl, benefits } = Astro.props;
---

<article class="bg-white rounded-lg overflow-hidden shadow-lg transition-transform hover:scale-[1.02]">
  <img src={imageUrl} alt={title} class="w-full h-48 object-cover" />
  <div class="p-6">
    <h3 class="text-xl font-bold text-eco-600 mb-3">{title}</h3>
    <p class="text-eco-700 mb-4">{description}</p>
    <ul class="space-y-2">
      {benefits.map((benefit) => (
        <li class="flex items-center text-eco-600">
          <svg class="w-5 h-5 mr-2 text-eco-400" fill="currentColor" viewBox="0 0 20 20">
            <path d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"/>
          </svg>
          {benefit}
        </li>
      ))}
    </ul>
  </div>
</article>